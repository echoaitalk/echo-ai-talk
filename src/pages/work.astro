---
import { getCollection } from 'astro:content';

import BaseLayout from '../layouts/BaseLayout.astro';

import PortfolioPreview from '../components/PortfolioPreview.astro';
import Hero from '../components/Hero.astro';

const cvProjects = (
  await getCollection('work', ({ data }) => {
    return data.tags.includes('CV');
  })
).sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
const nlpProjects = (
  await getCollection('work', ({ data }) => {
    return data.tags.includes('NLP');
  })
).sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<BaseLayout
  title="Talks"
  description="Learn about Jeanine White's most recent projects"
>
  <div class="stack gap-10">
    <main class="wrapper stack gap-2">
      <Hero title="Talks" tagline="CV" align="start" />
      <div class="container">
        {cvProjects.map((project) => <PortfolioPreview project={project} />)}
      </div>
    </main>
    <main class="wrapper stack gap-2">
      <Hero title="" tagline="NLP" align="start" />

      <div class="container">
        {nlpProjects.map((project) => <PortfolioPreview project={project} />)}
      </div>
    </main>
  </div>
</BaseLayout>
<style>
  .container {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
</style>
